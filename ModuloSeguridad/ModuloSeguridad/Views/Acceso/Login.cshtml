
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/MainLogin.cshtml";
}

<h2>Login</h2>

<div class="row">
    <form action="@Url.Content("~/Acceso/Login")" method="post">
        <div class="form-group">
            <label>Usuario</label>
            <input type="text" class="form-control" name="user" placeholder="Ingrese su usuario" />
        </div>
        <div class="form-group">
            <label>Contraseña</label>
            <input type="password" class="form-control" name="pass" placeholder="Ingrese su contraseña" />
        </div>
        <div class="form-group">
            <input type="submit" class="btn btn-primary" name="btnIngreso" value="Ingesar" />
        </div>
    </form>
   <p>@ViewBag.Error</p>
</div>